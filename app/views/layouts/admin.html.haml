<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
          %title= content_for?(:title) ? yield(:title) : "Simple Rails CMS"
          %meta{:content => "", :name => "description"}
            %meta{:content => "", :name => "author"}
              = stylesheet_link_tag    "application", :media => "all"
              = javascript_include_tag "application"
              = csrf_meta_tags
              = yield(:head)
  %body
    = render 'layouts/site_bar'
    #page_container
      %header.navbar.navbar-fixed-top
        %nav.navbar-inner
          .container
            = render 'layouts/admin_navigation'
      #main{:role => "main"}
        .container
          .row
            .span3
              .well.sidebar-nav
                = render partial: '/search'
              .well.sidebar-nav
                = render 'layouts/admin_all_categories'
              .well.sidebar-nav
                = render partial: '/tag_cloud'
            .span9.content{:style => "background-color: #ccc;"}
              = render 'layouts/messages'
              = yield
          %footer
      / ! end of #main
/
  <title></haml:block><haml:silent></haml:silent><haml:block> </title>
  
  <div style="float:left; background-color:#888">
  <haml:silent>
  </haml:silent></div>
