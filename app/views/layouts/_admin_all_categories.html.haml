%div
  %h2= Category.model_name.human(count: 2)
%ul.nav.nav-list
  - @root_categories.each do |category|
    %li.nav-header= link_to category.short_info, admin_category_path(category)
    - if category.child_categories.count > 0
      = render :partial => 'layouts/admin_categories', :object => category.child_categories
