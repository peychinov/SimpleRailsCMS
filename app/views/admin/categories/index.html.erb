<h1>Listing categories</h1>

<table class="table table-striped">
  <thead>  
    <tr>
      <th>Title</th>
      <th>Parent</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>    
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.parent_category.present? ? category.parent_category.title : '-' %></td>
        <td><%= link_to 'Show', admin_category_path(category) %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Delete', admin_category_path(category), confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>     
</table>

<br />

