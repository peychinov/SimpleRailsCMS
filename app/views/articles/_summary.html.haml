- article = summary

.article_summary
  %span.title= link_to article.title, article

  %span.pull-right
    = render partial: '/articles/in_category', locals: { article: article }
  %br
  %span.pull-right
    = render partial: '/articles/tags', locals: { article: article }

  .contents= sanitize(article.content[0...500] + '...', :tags=>[])