<h1>Listing articles</h1>

<table class="table table-striped">
  <thead>  
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody> 
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= raw(article.content[0...100] + '...') %></td>
        <td><%= link_to article.category.title, category_path(article.category) %></td>
      </tr>
    <% end %>
  </tbody>     
</table>