%p#notice= notice
%p
  %h2= @category.title
%p
  %b Parent:
  - if @category.parent_category.present?
    = link_to @category.parent_category.title, @category.parent_category
  - else
    = 'None'
%p
  %h3 Articles
  - if @category.articles.count == 0
    = 'None'
  - elsif @category.articles.count == 1
    - article = @category.articles.first
    .well{:style => "padding: 10px;"}
      %h4= link_to article.title, article
      .well{:style => "padding: 10px; margin-bottom: 0px; background-color: #d5d5d5"}
        = raw(article.content)
  - else
    - @category.articles.each do |article|
      .well{:style => "padding: 10px"}
        %h4= link_to article.title, article
        .well{:style => "padding: 10px; margin-bottom: 0px; background-color: #d5d5d5"}
          = raw(article.content[0..150])
= link_to 'Back', categories_path
