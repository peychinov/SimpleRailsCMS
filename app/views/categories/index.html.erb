<h1>Listing categories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Parent</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.title %></td>
    <td><%= category.parent_category.present? ? (link_to category.parent_category.title, category_path(category.parent_category)) : '-' %></td>
  </tr>
<% end %>
</table>
