<h1>Listing categories</h1>

<table class="table table-striped">
  <thead>  
    <tr>
      <th>Title</th>
      <th>Parent</th>
    </tr>
  </thead>
  <tbody> 
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.title, category %></td>
        <td><%= category.parent_category.present? ? (link_to category.parent_category.title, category_path(category.parent_category)) : 'None' %></td>
      </tr>
    <% end %>
  </tbody>     
</table>
